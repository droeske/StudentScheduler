<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MentorEdit" />
        <activity android:name=".AssessmentEdit" />
        <activity android:name=".CourseEdit" />
        <activity android:name=".TermEdit" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchScreen"
            android:launchMode="singleTask"> </activity>
        <activity android:name=".ReportScreen" />
        <activity android:name=".Calendar" />
        <activity android:name=".MentorAdd" />
        <activity android:name=".AssessmentAdd" />
        <activity android:name=".CourseAdd" />
        <activity android:name=".TermAdd" />
        <activity android:name=".MentorInfo" />
        <activity android:name=".AssessmentInfo" />
        <activity android:name=".CourseInfo" />
        <activity android:name=".TermInfo" />
        <activity android:name=".MentorList" />
        <activity android:name=".AssessmentList" />
        <activity android:name=".CourseList" />
        <activity android:name=".TermList" />
        <activity android:name=".MainActivity" />

        <receiver
            android:name=".MyStartReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".MyEndReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".MyAssessmentReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>