<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- TextView and other stuff -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/termName"
            android:layout_width="259dp"
            android:layout_height="104dp"
            android:layout_margin="10dp"
            android:text="TextView"
            android:textSize="30sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true"
            app:srcCompat="@drawable/baseline_delete_white_18dp" />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startTextView"
                android:layout_width="140dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:text="Start Date: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="182dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:text="00/00/0000"
                android:textSize="24sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/endTextView"
                android:layout_width="140dp"
                android:layout_height="76dp"
                android:text="End Date:"
                android:layout_margin="10dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/endDate"
                android:layout_width="199dp"
                android:layout_height="76dp"
                android:text="00/00/0000"
                android:layout_margin="10dp"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coursesText"
                android:layout_width="131dp"
                android:layout_height="43dp"
                android:layout_margin="10dp"
                android:text="Courses"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/baseline_add_white_18dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/myCourseList"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <TextView
            android:id="@+id/spaceText"
            android:layout_width="146dp"
            android:layout_height="60dp"
            android:text="" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/baseline_create_white_18dp" />
    </LinearLayout>
</ScrollView>